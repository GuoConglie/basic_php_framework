{% if basket.itemCount and basket.subTotal %}
    <h3>账单</h3>
    <table class="table">
        <tr>
            <td>小计</td>
            <td>{{ basket.subTotal | number_format(2) }}</td>
        </tr>
        <tr>
            <td>运费</td>
            <td>5.00</td>
        </tr>
        <tr>
            <td class="alert-success">总计</td>
            <td class="alert-success">{{ (basket.subTotal + 5) | number_format(2) }}</td>
        </tr>
    </table>
{% endif %}